<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content"  
    android:orientation="horizontal" 
    android:background="@color/beige">  
	    <TextView  
	        android:id="@+id/dnd_list_row_title"  
	        android:layout_width="80px"  
	        android:layout_height="wrap_content"  
	        android:layout_alignParentLeft="true"/>
	  	
	  	<Button 
	  		android:text="DELETE" 
		  	android:id="@+id/dnd_list_deleteBtn" 
		  	android:layout_height="wrap_content" 
		  	android:layout_width="wrap_content" 
		  	android:layout_toLeftOf="@+id/dnd_list_moveBtn" 
		  	android:layout_alignTop="@+id/dnd_list_moveBtn" 
		  	android:layout_alignBottom="@+id/dnd_list_moveBtn"></Button>
		  	
	  	<ImageView
	  		android:id="@+id/dnd_list_moveBtn" 
	  		android:layout_width="60px"  
		  	android:layout_height="60px" 
		  	android:src="@drawable/finger"
		  	android:layout_alignParentRight="true"></ImageView>
</RelativeLayout>


