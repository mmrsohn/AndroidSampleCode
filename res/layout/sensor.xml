<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView  android:text="Sensor Values" android:gravity="center" android:textSize="18sp"
        android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView android:text="가속도" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/acc" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" />    
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView android:text="방향" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/ori" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" />    
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView android:text="밝기" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/lig" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" />    
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView android:text="자력" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/mag" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" />    
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView android:text="압력" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/pre" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" />    
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView android:text="근접" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/prox" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" />    
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView android:text="온도" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/temp" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" />    
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView android:text="최대가속도 : " 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/maxAcc" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" />    
    </LinearLayout>
    
</LinearLayout>